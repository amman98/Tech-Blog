<div>
    <div class="row mb-4 post">
      <div class="post-header">
        <a class="post-title" href="/post/{{id}}/leave-comment">        
          <h2>
            {{this.title}}
          </h2>
        </a>
        <p>Posted by {{this.user.username}} on {{format_date this.date_created}}</p>
      </div>
      <p>{{this.content}}</p>
    </div>
  <div>
    {{!-- use a partial to generate all the comments under this post --}}
    {{#each comments as |comment|}}
    {{> all-comments comment}}
    {{/each}}
  </div>
</div>