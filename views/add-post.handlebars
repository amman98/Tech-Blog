<div class="row mb-4 post">
  <div class="post-header">
    <h2>
      Create New Post
    </h2>
  </div>
  <form id="create-post" data-user-id="{{id}}">
      <h3>Title</h3>
      <input type="text" id="post-title">

      <h3>Content</h3>
      <input type="text" id="post-content">
      <button class="create-post-button btn btn-primary" type="submit">Create</button>
  </form>
</div>

<script src="/js/post.js"></script>